<div class="top-chat">
  <div class="chat-gaiyou">hogefuga
  </div>
  <div class="chat-syuryou">
  <a href="">チャットを終了する</a>
  </div>
</div>

<div class="middle-chat">
  <%= render partial: 'message', collection: @messages %>
</div>


<%= form_with model: [@room, @message], html: {class: "bottom-chat"}, local: true do |f|%>
  <div class="contact">
    <%= f.text_field :content, class: 'message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send' %>
<% end %>